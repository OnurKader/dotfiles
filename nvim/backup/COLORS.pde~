void setup(){
  size(832, 832);
  background(0);
  loadPixels();
  for(int i = 0; i < pixels.length; i++)
    for(int j = 0; j < pixels.length; j++){
      pixels[i + j*pixels.length] = color(map(i, 0, 832, 255, 0), map(j, 0, 832, 255, 0), map(8*i-4*j, 0, 2128, 255, 0));
    }

    updatePixels();
}

void draw(){



}
