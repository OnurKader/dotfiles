#include<iostream>
#define OLC_PGE_APPLICATION
#include "olcPGE/olcPixelGameEngine.h"

class Life : public olc::PixelGameEngine
{
public:
	Life()
	{
		sAppName = "Life";
	}

	bool OnUserCreate() override
	{

		return true;
	}

	bool OnUserUpdate(float fElapsedTime) override
	{
		if(GetKey(olc::Key::ESCAPE).bPressed) return false;
		DrawLine(12, 333, 222, 123, olc::CYAN);
		return true;
	}
};

int main()
{
	Life life;
	if (life.Construct(1280, 720, 1, 1))
		life.Start();
	return 0;
}

